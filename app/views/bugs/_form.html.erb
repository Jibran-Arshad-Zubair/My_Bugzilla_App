
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4">
        <h1 class="text-center mb-4">Bug Creation Form</h1>
        <%= form_with(model: @bug, local: true, class: "needs-validation") do |form| %>
          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :deadline %>
            <%= form.date_select :deadline, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :bug_type %>
            <%= form.select :bug_type, Bug.bug_types.keys, { include_blank: "Select Bug Type" }, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= form.label :status %>
            <%= form.select :status, Bug.status_options, { include_blank: "Select Status" }, class: "form-control", required: true %>
          </div>
          <div class="form-group text-center">
            <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

