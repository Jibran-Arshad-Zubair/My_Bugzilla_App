<h1>Add QA to Project: <%= @project.name %></h1>

<%= form_tag add_qa_project_path(@project), method: :post do %>
  <label>Select a QA:</label>
  <%= select_tag 'user_id', options_for_select(@users.collect { |user| [user.name, user.id] }) %>
  <%= submit_tag 'Add QA' %>
<% end %>

<%= link_to 'Back to Project', project_path(@project) %>
